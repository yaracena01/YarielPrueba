@model YarielPrueba.Models.services
@{
    Layout = null;
}

<!DOCTYPE html>

@using (Html.BeginForm("AddOrEdit", "Services", FormMethod.Post, new { autocomplete = "off", onsubmit = "return SubmitForm(this)", id = "form-service" }))
{
    @Html.HiddenFor(Model => Model.id)
    <div class="form-group">
        @Html.LabelFor(Model => Model.name, new { @class = "control-label" })
        @Html.EditorFor(Model => Model.name, new { htmlAttributes = new { @class = "form-control", maxlength = 25, placeholder = "Enter a service name" } })
        @Html.ValidationMessageFor(Model => Model.name)
    </div>
    <div class="form-group">
        @Html.LabelFor(Model => Model.description, new { @class = "control-label" })
        @Html.EditorFor(Model => Model.description, new { htmlAttributes = new { @class = "form-control", maxlength = 25, placeholder = "Enter a description" } })
        @Html.ValidationMessageFor(Model => Model.description)
    </div>
 
    <div class="modal-footer">
        <button type="submit" title="Save service" class="btn btn-primary"><i class="fa fa-floppy-o" aria-hidden="true"></i></button>
        <button id="clear" type="button" title="Clear Campos" class="btn"><i class="fa fa-eraser" aria-hidden="true"></i></button>
    </div>
}

<script>
    $('#clear').on("click", function () {
        $("[name='name']").val('');
        $("[name='description']").val('');
    });
</script>